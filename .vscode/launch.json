{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BMP attach",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/target/thumbv6m-none-eabi/debug/main",
            "request": "attach", // "launch" also works perhaps
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "RP2040",
            "BMPGDBSerialPort": "/dev/ttyBmpGdb", // Use whatever serial port makes sense for your OS and BMP setup
        },
        {
            "name": "BMP Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/target/thumbv6m-none-eabi/debug/main",
            "request": "launch",
            "preLaunchTask": "rust: cargo build",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "RP2040",
            "BMPGDBSerialPort": "/dev/ttyBmpGdb", // Use whatever serial port makes sense for your OS and BMP setup
            "runToEntryPoint": "main"
        }
    ]
}